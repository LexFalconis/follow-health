{% extends 'base.html.twig' %}

{% block title %}FoodDiary index{% endblock %}

{% block body %}
    <h1>FoodDiary index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>TimeWokeUp</th>
                <th>MealTime</th>
                <th>MealDescription</th>
                <th>WhereWas</th>
                <th>WithWhom</th>
                <th>HungerLevel</th>
                <th>PostMealSatietyLevel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for food_diary in food_diaries %}
            <tr>
                <td>{{ food_diary.id }}</td>
                <td>{{ food_diary.date ? food_diary.date|date('Y-m-d') : '' }}</td>
                <td>{{ food_diary.TimeWokeUp ? food_diary.TimeWokeUp|date('H:i:s') : '' }}</td>
                <td>{{ food_diary.MealTime ? food_diary.MealTime|date('H:i:s') : '' }}</td>
                <td>{{ food_diary.MealDescription }}</td>
                <td>{{ food_diary.WhereWas }}</td>
                <td>{{ food_diary.WithWhom }}</td>
                <td>{{ food_diary.HungerLevel }}</td>
                <td>{{ food_diary.PostMealSatietyLevel }}</td>
                <td>
                    <a href="{{ path('app_food_diary_show', {'id': food_diary.id}) }}">show</a>
                    <a href="{{ path('app_food_diary_edit', {'id': food_diary.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_food_diary_new') }}">Create new</a>
{% endblock %}
